generator client {
  provider = "prisma-client-js"
  output = "./generated/test"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://test:test_pass@localhost:5492/test_db"
}

enum UserType{
  MASTER
  DEALER
  ADMIN
  USER
}

model User {
  user_id          String      @id @unique @default(uuid())
  login            String
  password         String
  userType         UserType

  farms          Farm[]

  @@map("users")
}

model Farm {
  farm_id    String      @id @unique @default(uuid())
  farm_name  String      @unique  
  farm_city  String
  farm_lat   Float 
  farm_lng   Float
  owner       User          @relation(fields: [owner_id], references: [user_id], onDelete: Cascade)
  owner_id    String        @unique
  created_by  String
  updated_by  String?

  admins            String[]   
  dealers           String[]
  users             String[]

  @@map("farms")    
}
