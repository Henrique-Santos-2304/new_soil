// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String      @id @unique @default(uuid())
  name        String
  password    String
  data_person DataPerson?
  adress      Adress?

  @@map("users")
}

model DataPerson {
  id        String   @id @unique @default(uuid())
  cpf       String   @unique()
  rg        String?  @unique()
  telephone String[]

  user User? @relation(fields: [id], references: [id])
}

model Adress {
  id       String @id @unique @default(uuid())
  cep      String
  road     String
  number   Int
  district String
  city     String
  state    String

  user User? @relation(fields: [id], references: [id])
}
